{
    "info": {
        "_postman_id": "c5528a52-72b2-49b1-956c-79378f348abb",
        "name": "LDC Loan Review Workflow",
        "description": "End-to-end tests for LDC Loan Review Workflow including Approved, Rejected, Repurchase, and Reclass scenarios.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Approved Flow",
            "item": [
                {
                    "name": "Start PPA Review (Approved)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.expect(jsonData.workflows[0].Status).to.eql(\"RUNNING\");",
                                    "pm.environment.set(\"requestNumber\", jsonData.workflows[0].RequestNumber);",
                                    "pm.environment.set(\"loanNumber\", jsonData.workflows[0].LoanNumber);"
                                ],
                                "type": "text/javascript"
                            }
                        },
                        {
                            "listen": "prerequest",
                            "script": {
                                "exec": [
                                    "const timestamp = new Date().getTime();",
                                    "pm.environment.set(\"requestNumber\", \"REQ-POSTMAN-\" + timestamp);",
                                    "pm.environment.set(\"loanNumber\", \"1234567890\");"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"RequestNumber\": \"{{requestNumber}}\",\n    \"LoanNumber\": \"{{loanNumber}}\",\n    \"ReviewType\": \"LDC\",\n    \"ReviewStepUserId\": \"postman_user\",\n    \"Attributes\": [\n        {\"Name\": \"CreditScore\", \"Decision\": \"Approved\"},\n        {\"Name\": \"DebtRatio\", \"Decision\": \"Approved\"}\n    ]\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/startPPAreview",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "startPPAreview"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Submit Loan Decision (Approved)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"RequestNumber\": \"{{requestNumber}}\",\n    \"LoanNumber\": \"{{loanNumber}}\",\n    \"LoanDecision\": \"Approved\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/getNextStep",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "getNextStep"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
